{
  "services": [
    {
      "name": "web",
      "type": "web",
      "env": {
        "PROCESS_TYPE": "web"
      },
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "gunicorn server:app -b 0.0.0.0:8080"
    },
    {
      "name": "scheduler",
      "type": "worker",
      "env": {
        "PROCESS_TYPE": "scheduler"
      },
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python scheduler.py",
      "runAfterDeploy": true
    }
  ]
}
